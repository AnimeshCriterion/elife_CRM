<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_10sdp"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/white"
                    android:text="O"
                    android:textSize="@dimen/_25sdp"
                    android:gravity="center"
                    android:fontFamily="@font/abeezee_regular"
                    android:id="@+id/txt_name_letter"
                    android:background="@drawable/circle"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="0.3"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abeezee_regular"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/txt_subid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abeezee_regular"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/txt_cid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abeezee_regular"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_cust_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:fontFamily="@font/abeezee_regular"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:id="@+id/txt_sub_id"
                    android:fontFamily="@font/abeezee_regular"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:fontFamily="@font/abeezee_regular"
            android:textColor="@color/Black"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_baseline_phone_android_24"></ImageView>

            <TextView
                android:id="@+id/txt_mob_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:fontFamily="@font/abeezee_regular"
                android:textColor="@color/Black"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/ic_whatsapp"/>

            <ImageView
                android:id="@+id/copy_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                app:tint="@color/Black"
                android:src="@drawable/ic_copy"/>

            <ImageView
                android:id="@+id/call_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/ic_phone"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/border" />

        <TextView
            android:id="@+id/txt_complaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:fontFamily="@font/abeezee_regular"
            android:textColor="@color/red"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/border" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:text="Assigned Date :"
            android:fontFamily="@font/abeezee_regular"
            android:textColor="@color/Black"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:paddingLeft="@dimen/_20sdp"
                android:id="@+id/txt_created_date"
                android:textColor="@color/Black"
                android:fontFamily="@font/abeezee_regular"
                android:textSize="@dimen/_14sdp" />
            <Spinner
                android:id="@+id/spn_status"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:spinnerMode="dialog"
                android:gravity="center"/>

            <TextView
                android:gravity="center"
                android:id="@+id/txt_close"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:fontFamily="@font/abeezee_regular"
                android:background="@drawable/rounded_button_green"
                android:text="CLOSE"
                android:textColor="@color/Black"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

        <View
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/border" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:text="Assign to :"
            android:fontFamily="@font/abeezee_regular"
            android:textColor="@color/Black"
            android:textSize="@dimen/_14sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_assignto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:paddingLeft="@dimen/_20sdp"
                android:fontFamily="@font/abeezee_regular"
                android:textColor="@color/Black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:gravity="center"
                android:id="@+id/txt_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:fontFamily="@font/abeezee_regular"
                android:background="@drawable/rounded_button_darkblue"
                android:text="EDIT"
                android:textColor="@color/White"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>