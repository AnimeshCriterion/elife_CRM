<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_complaint"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        tools:ignore="MissingConstraints"
        android:visibility="visible"
        tools:layout_editor_absoluteX="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <View
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:id="@+id/sideview"
                    android:background="@color/darkblue" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/compliantlist_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:drawableLeft="@drawable/ic_baseline_person_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/abeezee_regular"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt_complaint_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="right"
                        android:paddingRight="@dimen/_10sdp"
                        android:text=""
                        android:fontFamily="@font/abeezee_regular"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center"
                    android:background="@color/border" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_accountno"
                        android:layout_width="0dp"
                        android:paddingVertical="4dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:drawablePadding="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:fontFamily="@font/abeezee_regular"
                        android:textColor="@color/darkblue" />

                    <TextView
                        android:id="@+id/subid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:paddingVertical="4dp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center"
                        android:fontFamily="@font/abeezee_regular"
                        android:textColor="@color/darkblue"
                        ></TextView>
                    <TextView
                        android:id="@+id/txt_priority"
                        android:layout_width="0dp"
                        android:paddingVertical="4dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="0.4"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center"
                        android:fontFamily="@font/abeezee_regular"
                        android:textColor="@color/darkblue"
                        ></TextView>

               </LinearLayout>


                <TextView
                    android:id="@+id/txt_complaint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingVertical="4dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_complaints"
                    android:drawablePadding="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:fontFamily="@font/abeezee_regular"
                    android:textColor="@color/darkblue" />


                <TextView
                    android:drawableLeft="@drawable/ic_baseline_location"
                    android:id="@+id/txt_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:fontFamily="@font/abeezee_regular"
                    android:textColor="@color/darkblue" />

                <LinearLayout
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_status"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abeezee_regular"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"/>


                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/txt_complaintId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="0.5"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="end"
                        android:paddingRight="@dimen/_10sdp"
                        android:fontFamily="@font/abeezee_regular"
                        android:textColor="@color/darkblue"
                        />
                    <TextView
                        android:id="@+id/txt_assignto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="0.5"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="end"
                        android:paddingRight="@dimen/_10sdp"
                        android:fontFamily="@font/abeezee_regular"
                        android:textColor="@color/darkblue" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/paymentstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="@dimen/_20sdp"
                        android:text=""
                        android:fontFamily="@font/abeezee_regular"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_14sdp"></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>