<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.CustomerListActivity">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/gradient_bg_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/tool_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@id/iv_back"
            android:fontFamily="@font/abeezee_regular"
            android:text="Customer List"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/calenderDateRange"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:src="@drawable/ic_calendar"
            android:visibility="visible"
            app:tint="@color/white" />

    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:id="@+id/custmersearch_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_45sdp"
            android:background="@drawable/rounded_button_edit"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/abeezee_regular"
            android:hint="Search"
            android:inputType="text"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cv_filter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ivbtn_search_submit"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/ic_baseline_search_24"
            app:layout_constraintBottom_toBottomOf="@+id/custmersearch_edit"
            app:layout_constraintEnd_toEndOf="@+id/custmersearch_edit"
            app:layout_constraintTop_toTopOf="@+id/custmersearch_edit" />

        <ImageButton
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:id="@+id/iv_scan_button"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@+id/custmersearch_edit"
            app:layout_constraintEnd_toStartOf="@+id/ivbtn_search_submit"
            app:layout_constraintTop_toTopOf="@+id/custmersearch_edit"
            android:background="@drawable/ic_baseline_qr_code_scanner_24"
            />


        <ProgressBar
            android:visibility="gone"
            android:id="@+id/pb_searching"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="@+id/custmersearch_edit"
            app:layout_constraintEnd_toEndOf="@+id/custmersearch_edit"
            app:layout_constraintTop_toTopOf="@+id/custmersearch_edit" />

        <androidx.cardview.widget.CardView
            android:layout_marginEnd="@dimen/_5sdp"
            android:id="@+id/cv_filter"
            android:layout_width="35dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/filter_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_funnel" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fillterLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:visibility="gone"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Area/ Expiry Date"
                    android:fontFamily="@font/abeezee_regular"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="start|center"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittext_bg1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spn_area"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />

                    <ImageView
                        android:id="@+id/iv_calendar"
                        android:src="@drawable/ic_calendar"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:visibility="gone"
                        android:layout_height="@dimen/_20sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Status"
                        android:fontFamily="@font/abeezee_regular"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="start|center"
                        android:gravity="start" />
                    <TextView
                        android:id="@+id/txt_req_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abeezee_regular"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="start|center"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittext_bg1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spn_status"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />




                </LinearLayout>
<!--                <Button-->
<!--                    android:visibility="gone"-->
<!--                    android:id="@+id/btn_submit_filter"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Submit"-->
<!--                    android:textStyle="bold"-->
<!--                    android:background="@color/colorPrimary"-->
<!--                    android:textSize="13sp"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:padding="16dp" />-->
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFilterSelection"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                tools:listitem="@layout/item_view_filter_type"
                android:background="@drawable/bg_rect_with_stroke"/>


            <TextView
                android:visibility="gone"
                android:layout_marginTop="@dimen/_20sdp"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textStyle="bold"
                android:fontFamily="@font/abeezee_regular"
                android:id="@+id/txt_not_found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_18sdp"
                android:text="There is no data you are searching for"/>


            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/daterange"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/from_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/abeezee_regular"
                    android:gravity="center"
                    android:text="Today"
                    android:visibility="visible"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp"/>
                <TextView
                    android:visibility="visible"
                    android:id="@+id/to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/abeezee_regular"
                    android:gravity="center"
                    android:text="Today"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_customer_list"
                android:layout_width="match_parent"
                tools:listitem="@layout/item_customer_list"
                android:layout_height="match_parent" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:background="@drawable/edittext_bg1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal">

        <TextView
            android:paddingStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/backward"
            android:textStyle="bold"
            android:fontFamily="@font/abeezee_regular"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_18sdp"/>
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_paging"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/item_page_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>


        <TextView
            android:paddingStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:fontFamily="@font/abeezee_regular"
            android:gravity="center"
            android:text="@string/farward"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_18sdp"/>

    </LinearLayout>


</LinearLayout>