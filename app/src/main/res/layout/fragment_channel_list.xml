<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/abeezee_regular"
                    android:gravity="center"
                    android:text="Activation Date"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_11sdp" />

                <Spinner
                    android:id="@+id/months"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="@dimen/_7sdp"
                    android:text="Cash"
                    android:textColor="@color/Black">

                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/abeezee_regular"
                    android:gravity="center"
                    android:paddingRight="@dimen/_20sdp"
                    android:text="Expiry Date"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_11sdp" />

                <Spinner
                    android:id="@+id/paymentmode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="@dimen/_7sdp"
                    android:text="Cash"
                    android:textColor="@color/Black">

                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="0.8"
                    android:drawableRight="@drawable/ic_baseline_search_24"
                    android:fontFamily="@font/abeezee_regular"
                    android:hint="Search Channels"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingRight="@dimen/_10sdp"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:fontFamily="@font/abeezee_regular"
                    android:gravity="right"
                    android:paddingRight="@dimen/_20sdp"
                    android:text="Show Selected"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_11sdp" />

                <CheckBox
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="0.2"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="@dimen/_8sdp"
                tools:listitem="@layout/item_channel_list"
                android:id="@+id/rv_package_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee_regular"
            android:gravity="right"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="Bouquet Amount"
            android:textColor="@color/Black"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:id="@+id/txt_total_amount"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee_regular"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="0.0"
            android:textColor="@color/Black"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <Button
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_button_red"
            android:fontFamily="@font/abeezee_regular"
            android:text="Reset"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_button_edit"
            android:fontFamily="@font/abeezee_regular"
            android:text="SAVE"
            android:textSize="@dimen/_12sdp" />


    </LinearLayout>



</LinearLayout>