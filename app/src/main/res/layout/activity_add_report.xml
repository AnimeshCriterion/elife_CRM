<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/gradient_bg_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:textStyle="bold"
            android:fontFamily="@font/abeezee_regular"
            android:id="@+id/tool_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@id/iv_back"
            android:text="Register Complaint"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <View
                                android:layout_width="@dimen/_5sdp"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:background="@color/darkblue" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:gravity="center_vertical"
                                android:id="@+id/customer_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:drawableLeft="@drawable/ic_baseline_person_24"
                                android:drawablePadding="@dimen/_5sdp"
                                android:fontFamily="@font/abeezee_regular"
                                android:text="samuel"
                                android:textColor="@color/darkblue"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:gravity="center_vertical"
                                android:id="@+id/custmer_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:drawableLeft="@drawable/ic_baseline_location"
                                android:drawablePadding="@dimen/_5sdp"
                                android:fontFamily="@font/abeezee_regular"
                                android:text="hyderabd"
                                android:textColor="@color/darkblue"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:visibility="gone"
                                android:drawablePadding="@dimen/_5sdp"
                                android:drawableLeft="@drawable/ic_baseline_link_24"
                                android:id="@+id/custmer_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:fontFamily="@font/abeezee_regular"
                                android:paddingLeft="@dimen/_5sdp"
                                android:textColor="@color/darkblue"
                                android:textSize="@dimen/_12sdp">

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/border" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:background="@drawable/edittext_bg1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_gravity="center"
                            android:fontFamily="@font/abeezee_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="  Select Product"
                            android:textColor="@color/Black"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp"/>

                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"/>

                        <Spinner
                            android:id="@+id/spn_Product"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="0.5"
                            android:layout_gravity="center"
                            android:spinnerMode="dropdown"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/edittext_bg1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_gravity="center"
                            android:fontFamily="@font/abeezee_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="  Complaint Type"
                            android:textColor="@color/Black"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp"/>
                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"/>
                        <Spinner
                            android:id="@+id/spn_complaint"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="0.5"
                            android:spinnerMode="dropdown"></Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/edittext_bg1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/abeezee_regular"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="  Complaint Date"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_12sdp"/>
                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:drawableRight="@drawable/ic_calendar"
                            android:layout_marginStart="8.5sp"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:id="@+id/complaint_date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="0.5"
                            android:text="Date"
                            android:paddingRight="@dimen/_15sdp"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_12sdp">


                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/edittext_bg1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/abeezee_regular"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="  Select Priority"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_12sdp"/>
                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"/>
                        <Spinner
                            android:id="@+id/spn_priority"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="0.5"
                            android:spinnerMode="dropdown"></Spinner>
                    </LinearLayout>




                    <LinearLayout
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/edittext_bg1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/abeezee_regular"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="  Assign To"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_12sdp"/>
                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"/>
                        <Spinner
                            android:id="@+id/spn_assigned_to"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="0.5"
                            android:spinnerMode="dropdown"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/edittext_bg1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/abeezee_regular"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="  Assign Date"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_12sdp"/>
                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginStart="8.5sp"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:id="@+id/complaint_assign_date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="0.5"
                            android:paddingRight="@dimen/_15sdp"
                            android:drawableRight="@drawable/ic_calendar"
                            android:text="Date"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/edittext_bg1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/abeezee_regular"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="  Complaint Status"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_12sdp"></TextView>
                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"/>
                        <Spinner
                            android:id="@+id/spn_status"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="0.5"
                            android:spinnerMode="dropdown"></Spinner>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edittext_bg1"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/edt_comment"
                        android:gravity="top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@null"
                        android:fontFamily="@font/abeezee_regular"
                        android:hint="Write your remarks (Required)"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>

                <Button
                    android:id="@+id/addcompalintbtn"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_button_edit"
                    android:fontFamily="@font/abeezee_regular"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>