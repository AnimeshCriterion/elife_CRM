<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/gradient_bg_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:textStyle="bold"
            android:fontFamily="@font/abeezee_regular"
            android:id="@+id/tool_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@id/iv_back"
            android:text="Complaint List"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/custmersearch_edit"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_weight="0.9"
            android:background="@drawable/rounded_button_edit"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Search"
            android:imeOptions="actionDone"
            android:fontFamily="@font/abeezee_regular"
            android:maxLines="1"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:visibility="visible" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_filter"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="@dimen/_35sdp">

            <ImageView

                android:id="@+id/filter_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_funnel" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee_regular"
                android:gravity="right"
                android:paddingRight="@dimen/_19sdp"
                android:text=""
                android:textColor="@color/Black"
                android:textSize="@dimen/_10sdp"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/abeezee_regular"
                    android:gravity="center"
                    android:text="Today"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_10sdp"></TextView>

                <TextView
                    android:id="@+id/yesterday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/abeezee_regular"
                    android:gravity="center"
                    android:text="Yesterday"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_10sdp"></TextView>

                <TextView
                    android:id="@+id/thismonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/abeezee_regular"
                    android:gravity="center"
                    android:text="This Month"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_10sdp"></TextView>

                <TextView
                    android:id="@+id/calender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/abeezee_regular"
                    android:gravity="center"
                    android:text="Date"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_10sdp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal">


                <View
                    android:id="@+id/v1"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="0.2"
                    android:background="@color/darkblue"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/v2"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="0.2"
                    android:background="@color/darkblue"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/v3"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="0.2"
                    android:background="@color/darkblue"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/v4"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_weight="0.2"
                    android:background="@color/darkblue"
                    android:visibility="invisible" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                tools:ignore="MissingConstraints"
                android:visibility="visible"
                tools:layout_editor_absoluteX="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <View
                            android:layout_width="@dimen/_5sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="@color/darkblue" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/compliantlist_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:drawableLeft="@drawable/ic_baseline_person_24"
                                android:drawablePadding="@dimen/_5sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:text="RAHUL ROY"
                                android:textColor="@color/darkblue"
                                android:fontFamily="@font/abeezee_regular"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="right"
                                android:paddingRight="@dimen/_10sdp"
                                android:text=""
                                android:fontFamily="@font/abeezee_regular"
                                android:textColor="@color/darkblue"
                                android:textSize="@dimen/_12sdp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:drawablePadding="@dimen/_5sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="1"
                                android:fontFamily="@font/abeezee_regular"
                                android:textColor="@color/darkblue"
                                android:textSize="@dimen/_10sdp"></TextView>

                            <TextView
                                android:id="@+id/subid"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.4"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="center"
                                android:fontFamily="@font/abeezee_regular"
                                android:text="Account Number"
                                android:textColor="@color/darkblue"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="invisible"></TextView>

                            <TextView
                                android:id="@+id/areaid"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="right"
                                android:paddingRight="@dimen/_10sdp"
                                android:text=""
                                android:fontFamily="@font/abeezee_regular"
                                android:textColor="@color/darkblue"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="invisible"></TextView>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:drawablePadding="@dimen/_5sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="FREEZING"
                                android:fontFamily="@font/abeezee_regular"
                                android:textColor="@color/darkblue"
                                android:textSize="@dimen/_10sdp"></TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="right"
                                android:fontFamily="@font/abeezee_regular"
                                android:paddingRight="@dimen/_10sdp"
                                android:text="19-01-2020 7:56 PM"
                                android:textColor="@color/darkblue"
                                android:textSize="@dimen/_10sdp"></TextView>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="0.2"
                                android:background="@drawable/rounded_button_red1"
                                android:gravity="center"
                                android:text="OPEN"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/abeezee_regular"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/_10sdp"></TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.4"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="center"
                                android:text=" 20-09-2020 7:30 PM"
                                android:textColor="@color/White"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/abeezee_regular"
                                android:visibility="invisible"></TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="0.2"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="right"
                                android:paddingRight="@dimen/_10sdp"
                                android:text="Demo"
                                android:fontFamily="@font/abeezee_regular"
                                android:textColor="@color/darkblue"
                                android:textSize="@dimen/_12sdp"></TextView>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/paymentstatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:paddingLeft="@dimen/_20sdp"
                                android:text=""
                                android:fontFamily="@font/abeezee_regular"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_14sdp"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkblue"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:fontFamily="@font/abeezee_regular"
            android:paddingLeft="@dimen/_20sdp"
            android:text="Closed:1"
            android:textColor="@color/White"
            android:textSize="@dimen/_14sdp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:fontFamily="@font/abeezee_regular"
            android:paddingLeft="@dimen/_20sdp"
            android:text="Open:1"
            android:textColor="@color/White"
            android:textSize="@dimen/_14sdp"></TextView>

    </LinearLayout>
</LinearLayout>