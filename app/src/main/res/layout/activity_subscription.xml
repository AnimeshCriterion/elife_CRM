<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.CableSubscriptionActivity">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/gradient_bg_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:textStyle="bold"
            android:fontFamily="@font/abeezee_regular"
            android:id="@+id/tool_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@id/iv_back"
            android:text="Subscription Details"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/white"
                        android:text="O"
                        android:textSize="@dimen/_25sdp"
                        android:gravity="center"
                        android:fontFamily="@font/abeezee_regular"
                        android:id="@+id/txt_name_letter"
                        android:background="@drawable/circle"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                       />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_weight="0.3"
                        android:orientation="vertical">



                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abeezee_regular"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="NAME"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/txt_subid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abeezee_regular"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="ID :"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abeezee_regular"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_baseline_phone_android_24"/>

                    <TextView
                        android:id="@+id/txt_mob_no"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:fontFamily="@font/abeezee_regular"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_whatsapp"/>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_speech_bubble"/>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_phone"/>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/rounded_butoon_border"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_live_tv_24"
                        android:drawablePadding="@dimen/_13sdp"
                        android:paddingLeft="@dimen/_14sdp"

                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="Subscription Details"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_11sdp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_butoon_border"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:paddingLeft="@dimen/_15sdp"
                        android:text="Subscription"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_11sdp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:paddingLeft="@dimen/_20sdp"
                        android:text="MRP"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_11sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="GST"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_11sdp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Amount"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_11sdp"/>

                </LinearLayout>
                <TextView
                    android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/abeezee_regular"
                    android:id="@+id/txt_boq"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_weight="0.2"
                    android:paddingLeft="@dimen/_15sdp"
                    android:text="Bouquest / Package"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_bouquet_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/txt_ala"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_16sdp"
                    android:gravity="center"
                    android:layout_weight="0.2"
                    android:paddingLeft="@dimen/_15sdp"
                    android:text="Alacarte Channels"
                    android:fontFamily="@font/abeezee_regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_alacarte_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_butoon_border"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:drawableLeft="@drawable/ic_baseline_chevron_right_24"
                        android:paddingLeft="@dimen/_15sdp"
                        android:text="Total"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:paddingLeft="@dimen/_20sdp"
                        android:text=""
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/darkblue"

                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Rs."
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:paddingLeft="@dimen/_40sdp"
                        android:text="Rs."
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Monthly Subscription"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="Outstanding Amount"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>