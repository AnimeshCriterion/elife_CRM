<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <View
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:background="@color/darkblue" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/custmerdetails_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_cust_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:drawableLeft="@drawable/ic_baseline_person_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/abeezee_regular"
                        android:text=""
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/txt_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/abeezee_regular"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/acno"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/abeezee_regular"

                        android:drawableLeft="@drawable/ic_calendar"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_10sdp"></TextView>

                    <TextView
                        android:id="@+id/subid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/abeezee_regular"
                        android:gravity="left"

                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_12sdp"></TextView>

                    <TextView
                        android:id="@+id/edate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/abeezee_regular"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_12sdp"></TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/nob_no"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="0.2"
                        android:drawableLeft="@drawable/ic_baseline_all_inbox_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/abeezee_regular"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_10sdp"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="24dp"
                        android:src="@drawable/whatsapp"/>

                    <TextView
                        android:id="@+id/whatsup_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="0.2"
                        android:fontFamily="@font/abeezee_regular"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_10sdp" />

                    <ImageView
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_width="30dp"
                        android:id="@+id/imageActionButton"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_list"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="0.2"
                        android:drawableLeft="@drawable/ic_baseline_settings_input_antenna_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/abeezee_regular"
                        android:id="@+id/areaname"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_10sdp"></TextView>
                    <TextView
                        android:id="@+id/areaid"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="0.2"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/abeezee_regular"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_10sdp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:background="@color/Paid"
                            android:id="@+id/status"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abeezee_regular"
                            android:gravity="center"
                            android:text="PAID"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"/>


                    </androidx.cardview.widget.CardView>

                    </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/subarea"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_weight="0.2"
                        android:drawableLeft="@drawable/ic_baseline_location"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/abeezee_regular"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/_10sdp"></TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Active"
                            android:id="@+id/customer_status"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abeezee_regular"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"/>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>