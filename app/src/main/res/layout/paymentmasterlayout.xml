<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/payMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Pay Mode"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintEnd_toStartOf="@+id/paidamountTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/paidamountTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:text="Paid Amount"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintBottom_toBottomOf="@+id/payMode"
        app:layout_constraintEnd_toStartOf="@+id/cbytvfg"
        app:layout_constraintStart_toEndOf="@+id/payMode"
        app:layout_constraintTop_toTopOf="@+id/payMode" />

    <TextView
        android:id="@+id/cbytvfg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Date"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintBottom_toBottomOf="@+id/paidamountTV"
        app:layout_constraintEnd_toStartOf="@+id/trsnNotv"
        app:layout_constraintStart_toEndOf="@+id/paidamountTV"
        app:layout_constraintTop_toTopOf="@+id/paidamountTV" />

    <TextView
        android:id="@+id/trsnNotv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:text="Collected By"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintBottom_toBottomOf="@+id/cbytvfg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cbytvfg"
        app:layout_constraintTop_toTopOf="@+id/cbytvfg" />


</androidx.constraintlayout.widget.ConstraintLayout>